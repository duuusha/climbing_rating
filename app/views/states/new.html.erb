<%= form_for [@country, @state] do |f| %>

  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name, autofocus: true %>
  </p>
  <p>
    <%= f.label :country_id %><br/>
    <%= f.text_field :country_id %>
  </p>
  <p>
    <%= f.submit  %> |
    <%= link_to "Cancel", country_states_path %>
  </p>
<% end %>