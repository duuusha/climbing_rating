<h1><%=@country.name %></h1>

<ul id="states">
  <% @states.each do |state| %>
    <li>
      <%= link_to state.name, country_state_path(@country, state) %>
    </li>
  <% end %>
</ul>


<%= link_to "All countries", countries_path %>
<%= link_to "Edit", edit_country_path(@country) %>
<%= link_to "Delete", country_path(@country), method: :delete, data: {confirm: "Are yor sure?"}  %>